{
  "name": "multidelegatecall",
  "version": "1.0.0",
  "author": {
    "name": "Romain (Rubilmax) Milon",
    "email": "rmilon@gmail.com",
    "url": "https://github.com/rubilmax"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build:pkg": "tsc --build ./tsconfig.build.json",
    "build:forge": "forge build",
    "build:hardhat": "hardhat compile",
    "typecheck": "tsc --noEmit",
    "test:hardhat": "LIQUIDATOR_LOG_LEVEL=error hardhat test",
    "test:hardhat:info": "LIQUIDATOR_LOG_LEVEL=info hardhat test",
    "test:hardhat:debug": "LIQUIDATOR_LOG_LEVEL=debug hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rubilmax/multidelegatecall.git"
  },
  "bugs": {
    "url": "https://github.com/Rubilmax/multidelegatecall/issues"
  },
  "keywords": [
    "mev",
    "ethers",
    "executor",
    "multicall",
    "multidelegatecall",
    "evm",
    "smart contract"
  ],
  "dependencies": {
    "ethers": "^6.12.1",
    "ethers-types": "^3.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-foundry": "^1.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/simple-mock": "^0.8.6",
    "chai": "^4.4.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "evm-maths": "^6.0.3",
    "hardhat": "2.22.4",
    "hardhat-deal": "^3.0.2",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "simple-mock": "^0.8.0",
    "solidity-coverage": "^0.8.11",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.sol": "forge fmt",
    "*.ts": "prettier"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "importOrder": [
      "^ethers",
      "^\\."
    ],
    "importOrderSeparation": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
